<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:k="sap.ui.layout" controllerName="loginapp.controller.LoginForm">
    <App>
        <pages>
            <Page title="Login Form" titleAlignment="Center">
                <content>
                    <FlexBox alignItems="Center" alignContent="Center" justifyContent="Center">
                        <k:VerticalLayout>
                            <k:HorizontalLayout>
                                <FlexBox alignItems="Center">
                                    <Label id="idLUname" width="120px" text="User Name" />
                                    <Input id="idIUname" />
                                </FlexBox>
                            </k:HorizontalLayout>
                            <k:HorizontalLayout>
                                <FlexBox alignItems="Center">
                                    <Label id="idLPwd" width="120px" text="Password" />
                                    <Input id="idIPwd" type="Password" />
                                </FlexBox>
                            </k:HorizontalLayout>
                            <k:HorizontalLayout>
                                <FlexBox alignItems="Center">
                                    <Label width="95px" />
                                    <Button id="idBtn" text="Login" press="checkDetails" width="120px" />
                                </FlexBox>
                            </k:HorizontalLayout>
                        </k:VerticalLayout>
                    </FlexBox>
                </content>
            </Page>
        </pages>
    </App>
</mvc:View>